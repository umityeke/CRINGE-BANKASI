rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcılar sadece kendi verilerini okuyup yazabilir
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Herkese diğer kullanıcıların temel bilgilerini okuma izni (leaderboard için)
      allow read: if request.auth != null && 
                     resource.data.keys().hasOnly(['username', 'fullName', 'krepScore', 'rozetler', 'isPremium']);
    }
    
    // Cringe entries - kullanıcı kendi entry'lerini yönetebilir
    match /cringe_entries/{entryId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && 
                               request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && 
                       request.auth.uid == resource.data.userId;
    }
    
    // Leaderboard - herkes okuyabilir, kimse yazamaz (cloud function ile güncellenir)
    match /leaderboard/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Sadece admin/cloud functions yazabilir
    }
    
    // Takas önerileri
    match /trade_proposals/{proposalId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
                              (request.auth.uid == resource.data.fromUserId || 
                               request.auth.uid == resource.data.toUserId);
    }
    
    // Genel ayarlar - herkes okuyabilir, kimse yazamaz
    match /settings/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Sadece admin yazabilir
    }
  }
}